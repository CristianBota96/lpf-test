<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context=".EchipaFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/loc"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="1"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="@color/colorWhite" />

        <ImageView
            android:id="@+id/img_club"
            android:layout_width="29dp"
            android:layout_height="36dp"
            android:layout_marginHorizontal="10dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/loc"
            android:background="@drawable/fcsb"
            android:scaleType="centerCrop" />


        <TextView
            android:id="@+id/nume_club"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/img_club"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="20dp"
            android:text="FC Steaua Bucuresti"
            android:textColor="@color/colorWhite"
            android:textAlignment="textStart"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mj_echipa"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/nume_club"
            android:layout_centerVertical="true"
            android:text="6"
            android:layout_marginRight="5dp"
            android:textColor="@color/colorWhite"
            android:textAlignment="textStart"
            android:textSize="12sp"
            />
        <TextView
            android:id="@+id/pct_echipa"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/mj_echipa"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="5dp"
            android:text="10"
            android:textColor="@color/colorWhite"
            android:textAlignment="textStart"
            android:textSize="10sp"
            />
        <TextView
            android:id="@+id/gm_echipa"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/pct_echipa"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="5dp"
            android:text="8"
            android:textColor="@color/colorWhite"
            android:textAlignment="textStart"
            android:textSize="10sp"
            />
        <TextView
            android:id="@+id/gp_echipa"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/gm_echipa"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="5dp"
            android:text="14"
            android:textColor="@color/colorWhite"
            android:textAlignment="textStart"
            android:textSize="10sp"
            />

    </RelativeLayout>






</RelativeLayout>