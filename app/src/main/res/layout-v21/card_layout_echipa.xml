<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context=".EchipaFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/numar"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="1"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="@color/colorGreen" />

        <ImageView
            android:id="@+id/img_jucator"
            android:layout_width="29dp"
            android:layout_height="36dp"
            android:layout_marginHorizontal="10dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/numar"
            android:background="@drawable/fcsb"
            android:scaleType="centerCrop" />


        <TextView
            android:id="@+id/nume_jucator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/numar"
            android:layout_toEndOf="@+id/img_jucator"
            android:text="BALGRADEAN CRISTIAN EMANUEL"
            android:textColor="@color/colorGreen"
            android:textAlignment="textStart"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tara"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nume_jucator"
            android:layout_toEndOf="@+id/img_jucator"
            android:text="Romania"
            android:textAlignment="textStart"
            android:textSize="8sp"
            />

    </RelativeLayout>






</RelativeLayout>