<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="5dp"
    tools:context=".HomeFragment">


    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="180dp"
        android:layout_height="300dp"
        app:cardCornerRadius="1dp"
        app:contentPaddingRight="10dp"
        app:contentPaddingLeft="10dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/cardImage_Shop"
                android:layout_width="180dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/cardTitle_Shop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardImage_Shop"
                android:padding="5dp"
                android:text="Card Title"
                android:textStyle="bold" />

            <TextView
                android:layout_below="@+id/cardTitle_Shop"
                android:id="@+id/cardDescription_Shop"
                android:paddingHorizontal="5dp"
                android:text="Lorem Ipsum"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_below="@+id/cardDescription_Shop"
                android:id="@+id/cardPriceShop"
                android:paddingHorizontal="5dp"
                android:text="$50"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/jucatori_disponibili"
                android:layout_below="@+id/cardPriceShop"
                android:background="@color/colorTransparentWhite"
                android:text="Jucatori disponibili"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:textSize="10sp"
                android:layout_height="40dp" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>
</RelativeLayout>