<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="vertical"
    tools:context=".HomeFragment">

        <ImageView
            android:id="@+id/scor_echipa2"
            android:layout_width="55dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginVertical="20dp"
            android:layout_toRightOf="@+id/scor_scor2"
            android:background="@drawable/fcsb"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/linie_mijloc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/scor_title_echipa2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/scor_echipa2"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/scor_scor2"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginLeft="20dp"
            android:text="FCSB"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            app:layout_constraintTop_toBottomOf="@+id/scor_echipa1"
            tools:layout_editor_absoluteX="290dp" />

        <TextView
            android:id="@+id/scor_scor2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/linie_mijloc"
            android:fontFamily="@font/roboto_light"
            android:text="1"
            android:textColor="@color/colorWhite"
            android:textSize="40sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/linie_mijloc"
            app:layout_constraintStart_toEndOf="@+id/scor_echipa2"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/linie_mijloc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="8dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="8dp"
            android:background="@color/colorTransparentWhite"
            android:fontFamily="@font/roboto_light"
            android:text=":"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="203dp" />

        <ImageView
            android:id="@+id/scor_echipa1"
            android:layout_width="55dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginVertical="20dp"
            android:layout_toLeftOf="@+id/scor_scor1"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/linie_mijloc"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/scor_title_echipa1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/scor_echipa1"
            android:layout_marginTop="20dp"
            android:layout_toLeftOf="@+id/scor_scor1"
            android:fontFamily="@font/roboto_regular"
            android:text="UCV"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:layout_marginRight="20dp"
            app:layout_constraintTop_toBottomOf="@+id/scor_echipa2"
            tools:layout_editor_absoluteX="86dp" />

        <TextView
            android:id="@+id/scor_scor1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@+id/linie_mijloc"
            android:fontFamily="@font/roboto_light"
            android:text="0"
            android:textColor="@color/colorWhite"
            android:textSize="40sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/scor_echipa1"
            app:layout_constraintStart_toEndOf="@+id/linie_mijloc"
            app:layout_constraintTop_toTopOf="parent" />

</RelativeLayout>