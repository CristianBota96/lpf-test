<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="2dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="2dp"
    tools:context=".HomeFragment">


            <TextView
                android:id="@+id/numar_stanga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/progress_stanga"
                android:layout_toStartOf="@+id/progress_stanga"
                android:text="3"
                android:visibility="invisible"
                android:layout_marginRight="10dp"
                android:textColor="@color/colorWhite"
                 />

            <ProgressBar
                android:id="@+id/progress_stanga"
                style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/titlu_mijloc"
                android:layout_toStartOf="@+id/titlu_mijloc" />

            <TextView
                android:id="@+id/titlu_mijloc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="10dp"

                android:background="@color/colorTransparentWhite"
                android:text="TOTAL GOLURI"
                android:textAlignment="center"
                android:textColor="@color/colorWhite" />

            <ProgressBar
                android:id="@+id/progress_dreapta"
                style="@android:style/Widget.Material.ProgressBar.Horizontal"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/numar_stanga"
                android:layout_toEndOf="@+id/titlu_mijloc" />

            <TextView
                android:id="@+id/numar_dreapta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/progress_stanga"
                android:layout_toEndOf="@+id/progress_dreapta"
                android:layout_marginLeft="10dp"
                android:text="3"
                android:textColor="@color/colorWhite" />


</RelativeLayout>