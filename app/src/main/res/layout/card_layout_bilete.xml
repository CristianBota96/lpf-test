<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context=".HomeFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/locul"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="PELUZA"
            android:textAlignment="center"
            android:textStyle="bold" />

        <View
            android:id="@+id/liniuta"
            android:layout_width="5dp"
            android:layout_height="1dp"
            android:layout_alignParentTop="true"
            android:layout_marginHorizontal="2dp"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@+id/locul"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/pozitia"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_toRightOf="@+id/liniuta"
            android:padding="5dp"
            android:text="Inel 3" />

        <View
            android:id="@+id/liniuta_verticala"
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/locul"
            android:layout_marginHorizontal="2dp"
            android:layout_toEndOf="@+id/pozitia"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/pret_bilet"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_toEndOf="@+id/liniuta_verticala"
            android:padding="5dp"
            android:text="10 LEI" />

        <EditText
            android:id="@+id/nr_bilete"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@+id/pret_bilet"
            android:ems="3"
            android:inputType="number"
            android:padding="5dp"
            android:hint="0"
            android:textAlignment="center"
            android:textColor="@color/colorGrey" />


    </RelativeLayout>

</RelativeLayout>