<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">


    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="184dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorGreen">

            <ImageView
                android:id="@+id/stancioiu"
                android:layout_width="140dp"
                android:layout_height="150dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/stancioiu" />

            <TextView
                android:id="@+id/nume_jucator_stancioiu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="42dp"
                android:layout_toEndOf="@+id/stancioiu"
                android:text="33 STANCIOIU EDUARD"
                android:textColor="@color/colorWhite"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/echipa_jucator"
                android:layout_width="35dp"
                android:layout_height="45dp"
                android:layout_below="@id/nume_jucator_stancioiu"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="10dp"
                android:layout_toEndOf="@+id/stancioiu"
                android:background="@drawable/fcsb" />

            <TextView
                android:id="@+id/titlu_jucator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nume_jucator_stancioiu"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@id/echipa_jucator"
                android:text="Portar FCSB"
                android:textColor="@color/colorWhite"
                android:textSize="15sp" />

            <Button
                android:id="@+id/cumpara_tricou"
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:layout_below="@id/echipa_jucator"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/stancioiu"
                android:background="@drawable/round_button"
                android:text="Cumpara tricou"
                android:textColor="@color/colorWhite"
                android:textSize="12sp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>