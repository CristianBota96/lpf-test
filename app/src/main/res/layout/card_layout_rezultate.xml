<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context=".PrezentaregeneralaFragment">


    <android.support.v7.widget.CardView
        android:id="@+id/cardview_rezultate"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp"
        app:contentPaddingRight="10dp"
        app:contentPaddingLeft="10dp"
        app:cardMaxElevation="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/card_rezultate"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/date_rezultate"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="7sp"
                android:text="Sambata/ 11 MAI '18/ 20:45"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/etapa_rezultate"
                android:layout_below="@+id/date_rezultate"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:textSize="7sp"
                android:text="ETAPA 10"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/liga_rezultate"
                android:layout_below="@+id/etapa_rezultate"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:textSize="7sp"
                android:text="LIGA 1 BETANO"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/cardImage_echipa1_rezultate"
                android:layout_width="29dp"
                android:layout_height="36dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/fcsb"
                android:layout_toLeftOf="@+id/scor1"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/scor1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_alignTop="@+id/date_rezultate"
                android:layout_toStartOf="@+id/linie_mijloc"
                android:background="@drawable/ractangle"
                android:text="2"
                android:textAlignment="center"
                android:textColor="@color/colorWhite" />
            <View
                android:id="@+id/linie_mijloc"
                android:layout_width="0.1dp"
                android:layout_centerInParent="true"
                android:layout_height="fill_parent"
                android:background="@color/colorTransparentWhite" />

            <TextView
                android:id="@+id/scor2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_alignTop="@+id/date_rezultate"
                android:layout_toEndOf="@+id/linie_mijloc"
                android:background="@drawable/ractangle"
                android:text="1"
                android:textAlignment="center"
                android:textColor="@color/colorWhite" />

            <ImageView
                android:id="@+id/cardImage_echipa2_rezultate"
                android:layout_width="29dp"
                android:layout_height="36dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/fcsb"
                android:layout_toEndOf="@+id/scor2"
                android:scaleType="centerCrop" />


            <Button
                android:id="@+id/statistici_rezultate"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_below="@id/cardImage_echipa1_rezultate"
                android:layout_marginTop="5dp"
                android:background="@drawable/statistici"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:id="@+id/acasa_rezultate"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/cardImage_echipa2_rezultate"
                android:layout_marginTop="10dp"
                android:textAlignment="textEnd"
                android:textSize="7sp"
                android:text="ACASA"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/acasa_echipa_rezultate"
                android:layout_below="@+id/acasa_rezultate"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/cardImage_echipa2_rezultate"
                android:textAlignment="textEnd"
                android:textSize="7sp"
                android:text="FCSB"
                android:textStyle="bold"
                />

        </RelativeLayout>


    </android.support.v7.widget.CardView>



</RelativeLayout>